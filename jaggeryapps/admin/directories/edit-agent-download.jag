    <script>
        var clipboard = new Clipboard('.btn');
        var messageContainer = "<div class='alert' role='alert'>" +
                "<span class='alert-content'></span></div>";

        $('.side-pane-trigger').click(function () {
            var rightPane = $('.right-pane');
            var leftPane = $('.left-pane');
            if (rightPane.hasClass('visible')) {
                rightPane.animate({"left": "0em"}, "slow").removeClass('visible');
                leftPane.animate({"left": "-18em"}, "slow");
                $(this).find('i').removeClass('fa-arrow-left').addClass('fa-reorder');
            } else {
                rightPane.animate({"left": "18em"}, "slow").addClass('visible');
                leftPane.animate({"left": "0em"}, "slow");
                $(this).find('i').removeClass('fa-reorder').addClass('fa-arrow-left');
            }
        });

        $('#btn-delete').on('click', function (e) {
            $('#demote-confirm-modal').modal({
                show: true
            });
        });

        $('#btnRevoke').on('click', function (e) {
            $('#revokeregenerate-confirm-modal').modal({
                show: true
            });
        });

        $('#btn-update').on('click', function (e) {
            initValidate();
            if ($("#agent-download-form").valid()) {
                $('#update-modal').modal({
                    show: true
                });
                setTimeout(function () {
                    updateUserDirectory();
                }, 1000);
            }
        });

        $("#agentUrl").keypress(function (e) {
            initValidate();
            if (e.which == 13) {
                if ($("#agent-download-form").valid()) {
                    $('#update-modal').modal({
                        show: true
                    });
                    setTimeout(function () {
                        updateUserDirectory();
                    }, 1000);
                }
            }
        });

        $(document).ready(function () {
        var timeout = setInterval(function () {
              verifyConnection(document.getElementById('agentUrl').value);

                clearTimeout(timeout);
            }, 400);

        });

    </script>

