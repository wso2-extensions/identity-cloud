<script>

    $('.side-pane-trigger').click(function(){
        var rightPane = $('.right-pane');
        var leftPane = $('.left-pane');
        if (rightPane.hasClass('visible')){
            rightPane.animate({"left":"0em"}, "slow").removeClass('visible');
            leftPane.animate({"left":"-18em"}, "slow");
            $(this).find('i').removeClass('fa-arrow-left').addClass('fa-reorder');
        } else {
            rightPane.animate({"left":"18em"}, "slow").addClass('visible');
            leftPane.animate({"left":"0em"}, "slow");
            $(this).find('i').removeClass('fa-reorder').addClass('fa-arrow-left');
        }
    });

    $(document).ready(function () {
        if (!checkDirectory('is-wso2.com').properties) {
            $("#msg-issue-element").show();
            var warning = $('<div class="col-md-10"><h5> You are running with a sample userstore. Dont forget to ' +
             'connect to an actual userstore.</h5></div><div class="col-md-2"><a ' +
              'href="/dashboard/directories/downloadagent" class="btn btn-default" style="float:left;"> ' +
               'Connect your Userstore <span class="fw-stack fw-md fw-settings"><i class="fw fw-circle-outline ' +
                'fw-stack-2x"></i><i class="fw fw-add fw-stack-1x"></i></span></a></div>');
             $("#msg-issue").html( warning);
        }
    });

</script>
<script>
var cookie = null;
var json = null;
var userName = null;
