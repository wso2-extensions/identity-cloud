<body>

<%
include("/templates/header.jag");
%>


<input type="hidden" value="" id="uniqueid">
<input type="hidden" value="false" id="disabled">

<!-- BOF App  menu -->
<div class="navbar navbar-secondary">
    <div class="container-fliud">
        <div class="row">
            <div class="side-pane-trigger">
                <i class="fa fa-reorder"></i>
            </div>
            <div class="breadcrumb-secondary">
                <i class="fw fw-security "></i> <span class="hidden-xs">Identity Cloud&nbsp;</span>  /  User Directory
            </div>
        </div>
    </div>
</div><!-- EOF App  menu -->
<div class="inner-wrapper">
    <!-- left pane wrapper -->
    <%include("/templates/leftpane.jag");%>
    <!-- left pane wrapper -->
    <div class="right-pane">
        <!-- BOF App  menu actionbar -->
        <div class="action-bar">
            <% var url = "/" + ADMIN_PORTAL_NAME + "/directories"; %>
            <a href="#" class="btn-action" data-toggle="tooltip" data-placement="top"
               title="Delete Connection" id="btn-delete">
                <span class="fw-stack fw-lg btn-action-ico">
                    <i class="fw fw-circle-outline fw-stack-2x"></i>
                    <i class="fw fw-delete fw-stack-1x"></i>
                </span> Delete Sample Userstore
            </a>
        </div><!-- EOF App  menu actionbar-->

        <div class="container-fluid app-content-section">
            <div class="row padding-bottom-xlg">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 forms">

                    <div id="push"></div>

                      <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="alert alert-info clearfix" role="alert">
                                <i class="fw fw-info fw-lg"></i>
                                <span class="alert-connect" > You are running with a sample user store. Don't forget to connect actual user store </span>

                                <button class="btn btn-default pull-right" onclick="window.location.href='/<%=ADMIN_PORTAL_NAME%>/directories/downloadagent'"> <span class="hidden-xs">Connect your userstore</span>
                                    <i class="fw fw-settings fw-lg"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="alert alert-warning alert-no-margin" role="alert">
                                <span class="alert-content">
                                   Note: This sample user directory screen may change once you connect an actual userstore.
                                </span>
                            </div>
                        </div>
                    </div>

                    </br>
                    <div class="row">
                        <div class="col-xs-6 col-sm-2 col-md-2 col-lg-1"><span class="connection-status">Connection: </span></div>
                        <div class="col-xs-6 col-sm-10 col-md-10 col-lg-11">
                            <span class="fw-stack fw-lg btn-action-ico noti-success">
                                <i class="fw fw-circle-outline fw-stack-2x"></i>
                                <i class="fw fw-check fw-stack-1x"></i>
                            </span>
                            <span class="connection-status">&nbsp;Demo LDAP Configured</span>

                        </div>
                    </div>
                    </br>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <h3>Sample Users</h3>
                            <table id="userTable" name="userTable" class="dataTable display no-footer" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>UserName</th>
                                        <th>Password</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                    </br>
                    <div class="row">
                        <div class="col-md-2">
                            <button type="button" class="cu-btn cu-btn-sm cu-btn-blue" id="add-application" onclick="viewApplications()">
                        <span class="fw-stack fw-lg">
                            <i class="fw fw-circle-outline fw-stack-2x"></i>
                            <i class="fw fw-list fw-stack-1x"></i>
                        </span>
                                View Application
                            </button>
                        </div>
                    </div>


                </div>
            </div><!-- /.container -->
        </div>
        <div class="clearfix"></div>
        <div id="push"></div>
    </div>
    <div id="footer">
        <div class="container-fluid">
            <div class="footer-text">WSO2 Cloud V: 1.2 . &copy; 2016 <i class="fw fw-wso2 fw-2x"></i> All Rights
                Reserved.
            </div>
        </div>
    </div>


    <div id="demote-confirm-modal" class="modal fade">
        <div class="modal-dialog modal-dialog-margin-top-md">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close close-override" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                    <h4 id="delete-heading" class="modal-title">Delete Directory</h4>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="form">
                                <div class="form-group">
                                    <label for="demote-reason-text" class="control-label" id="delete-label-text">Are you
                                        sure , you want to delete the sample user directory ? </label>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" id="delete-buttons-block">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button id="delete-confirm" type="button" onclick="deleteDirectory('sample-wso2.com');"
                            class="btn btn-primary">Confirm
                    </button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="../js/jquery-1.11.1/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="../js/bootstrap-3.2.0/bootstrap.min.js"></script>
    <script src="../js/custom/constants.js"></script>
    <script src="../js/custom/custom.js"></script>
    <script src="../samples/js/samples.js"></script>

    <script>
        $('.side-pane-trigger').click(function () {
            var rightPane = $('.right-pane');
            var leftPane = $('.left-pane');
            if (rightPane.hasClass('visible')) {
                rightPane.animate({"left": "0em"}, "slow").removeClass('visible');
                leftPane.animate({"left": "-18em"}, "slow");
                $(this).find('i').removeClass('fa-arrow-left').addClass('fa-reorder');
            } else {
                rightPane.animate({"left": "18em"}, "slow").addClass('visible');
                leftPane.animate({"left": "0em"}, "slow");
                $(this).find('i').removeClass('fa-reorder').addClass('fa-arrow-left');
            }
        });

          $('#btn-delete').on('click', function (e) {
            $('#demote-confirm-modal').modal({
                show: true
            });
        });

    </script>

    <script>
        var cookie = null;
        var json = null;
        var userName = null;
        var serverUrl = window.location.host;
        $(function WindowLoad(event) {
            url = 'wss://' + serverUrl + '/' + ADMIN_PORTAL_NAME + '/session_manager.jag';
            console.log("************ " + url);
            ws = new WebSocket(url);

            ws.onopen = function () {
                console.log("web Socket onopen. ");
                ws.send("First Message open");
            };
            ws.onmessage = function (event) {
                var obj = $.parseJSON(event.data);
                cookie = obj.cookie;
                userName = obj.user;
                getSampleUsers();
            };
            ws.onclose = function () {
                console.log("web Socket onclose. ");
            };

        });
    </script>
